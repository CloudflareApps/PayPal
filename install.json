{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./vendor/button.js"
      }
    ],
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "merchant": {
        "title": "Paypal Email",
        "description": "Enter the email associated with your Paypal account or your <a target=\"_blank\" href=\"https://www.paypal.com/settings\"><strong>Merchant ID</strong></a>",
        "order": 1,
        "type": "string"
        },
      "buttons": {
        "title": "Paypal Buttons",
        "type": "array",
        "order": 2,
        "items": {
          "type": "object",
          "title": "slide",
          "properties": {
            "location": {
              "order": 1,
              "title": "location",
              "type": "object",
              "format": "element",
              "default": {
                "selector": "body",
                "method": "prepend"
              }
            },
            "type": {
              "order": 2,
              "title": "Type of button",
              "type": "string",
              "enum": [
                "buynow",
                "cart",
                "donate",
                "subscribe"
              ],
              "enumNames": {
                "buynow": "Buy Now",
                "cart": "Add to cart",
                "donate": "Donate",
                "subscribe": "Subscribe"
              },
              "default": "buynow"
            },
            "name": {
              "order": 3,
              "title": "Name of product",
              "type": "string",
              "placeholder": "Quilts"
            },
            "amount": {
              "order": 4,
              "title": "Price of product",
              "type": "number",
              "placeholder": 14.99
            },
            "recurrence": {
              "order": 5,
              "title": "Set how many times in a period a customer should be billed",
              "type": "integer",
              "placeholder": 1,
              "showIf": {
                "buttons[].type": "subscribe"
              }
            },
            "timePeriod": {
              "order": 6,
              "title": "Set the length of the period",
              "type": "string",
              "showIf": {
                "buttons[].type": "subscribe"
              },
              "enum": [
                "D",
                "W",
                "M",
                "Y"
              ],
              "enumNames": {
                "D": "Daily",
                "W": "Weekly",
                "M": "Monthly",
                "Y": "Yearly"
                },
              "default": "M"
            },
            "currency": {
              "order": 7,
              "title": "Currency",
              "type": "string",
              "enum": [
                "USD",
                "GBP",
                "CAD"
              ],
              "enumNames": {
                "USD": "United States Dollars",
                "GBP": "Great British Pounds",
                "CAD": "Canadian"
                },
              "default": "USD"
            },
            "tax": {
              "order": 8,
              "title": "Tax",
              "type": "number",
              "placeholder": 2.12
            },
            "shipping": {
              "order": 9,
              "title": "Shipping Price",
              "type": "number",
              "placeholder": 5.32
            },
            "size": {
              "order": 10,
              "Title": "Button size",
              "type": "string",
              "enum": [
                "small",
                "large"
              ],
              "enumNames": {
                "small": "Small",
                "large": "Large"
              },
              "default": "small"
            },
            "style": {
              "order": 11,
              "title": "Style",
              "type": "string",
              "enum": [
                "primary",
                "secondary"
              ],
              "enumNames": {
                "primary": "Blue",
                "secondary": "Grey"
                },
              "default": "primary"
            }
          }
        }
      }
    }
  }
}
