{
  "resources": {
    "head": [],
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "merchant": {
        "title": "Paypal Email",
        "description": "Enter the email associated with your Paypal account or your <a target=\"_blank\" href=\"https://www.paypal.com/settings\"><strong>Merchant ID</strong></a>",
        "order": 1,
        "type": "string",
        "placeholder": "you@email.com"
        },
      "locale": {
        "showIf": {
          "merchant": {
            "op": "!=",
            "value": ""
          }
        },
        "title": "Locale",
        "order": 2,
        "type": "object",
        "properties": {
          "currency": {
            "order": 1,
            "title": "Currency",
            "type": "string",
            "enum": [
              "CAD",
              "EUR",
              "GBP",
              "JPY",
              "USD"
            ],
            "enumNames": {
              "CAD": "CAD ($)",
              "EUR": "EUR (€)",
              "GBP": "GBP (£)",
              "JPY": "JPY (¥)",
              "USD": "USD ($)"
            },
            "default": "USD"
          },
          "taxPercentage": {
            "order": 2,
            "title": "Tax percentage",
            "description": "How much tax for each purchase.",
            "type": "string",
            "placeholder": "0%"
          }
        }
      },
      "location": {
        "showIf": {
          "merchant": {
            "op": "!=",
            "value": ""
          }
        },
        "order": 2,
        "title": "Buttons location",
        "description": "Where the buttons will appear on the page.",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "buttons": {
        "title": "Items",
        "type": "array",
        "order": 3,
        "showIf": {
          "merchant": {
            "op": "!=",
            "value": ""
          }
        },
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "order": 1,
              "title": "Button type",
              "type": "string",
              "enum": [
                "buynow",
                "cart",
                "donate",
                "subscribe"
              ],
              "enumNames": {
                "buynow": "Buy Now",
                "cart": "Add to Cart",
                "donate": "Donate",
                "subscribe": "Subscribe"
              },
              "default": "buynow"
            },
            "name": {
              "order": 2,
              "title": "Product name",
              "type": "string",
              "placeholder": "Electronics, e-book, clothes, etc"
            },
            "amount": {
              "order": 3,
              "title": "Product cost",
              "description": "How much the buyer will be charged.",
              "type": "number",
              "placeholder": "0.00",
              "minimum": 0,
              "showIf": {
                "buttons[].type": {
                  "op": "==",
                  "method": "some",
                  "value": ["buynow", "cart", "subscribe"]
                }
              }
            },
            "shipping": {
              "order": 4,
              "title": "Shipping cost",
              "description": "How much the buyer will be charged for shipping.",
              "type": "number",
              "placeholder": "0.00",
              "minimum": 0,
              "showIf": {
                "buttons[].type": {
                  "op": "==",
                  "method": "some",
                  "value": ["buynow", "cart"]
                }
              }
            },
            "period": {
              "order": 5,
              "title": "Payment period",
              "type": "string",
              "showIf": {
                "buttons[].type": "subscribe"
              },
              "enum": [
                "D",
                "W",
                "M",
                "Y"
              ],
              "enumNames": {
                "D": "Daily",
                "W": "Weekly",
                "M": "Monthly",
                "Y": "Yearly"
                },
              "default": "M"
            },
            "recurrence": {
              "order": 6,
              "title": "Subscription length",
              "description": "How long a customer should be billed.",
              "type": "integer",
              "placeholder": 1,
              "default": 1,
              "showIf": {
                "buttons[].type": "subscribe"
              }
            }
          }
        }
      }
    }
  }
}
