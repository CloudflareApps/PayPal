{
  "resources": {
    "head": [],
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./vendor/paypal-buttons.js"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "merchantID": {
        "title": "PayPal email",
        "description": "The email associated with your PayPal account or your <a target=\"_blank\" href=\"https://www.paypal.com/settings\"><strong>Merchant ID</strong></a>.",
        "order": 1,
        "type": "string",
        "placeholder": "you@email.com"
        },
      "locale": {
        "title": "Locale",
        "order": 2,
        "type": "object",
        "properties": {
          "currency": {
            "order": 1,
            "title": "Currency",
            "type": "string",
            "enum": [
              "CAD",
              "EUR",
              "GBP",
              "JPY",
              "USD"
            ],
            "enumNames": {
              "CAD": "CAD ($)",
              "EUR": "EUR (€)",
              "GBP": "GBP (£)",
              "JPY": "JPY (¥)",
              "USD": "USD ($)"
            },
            "default": "USD"
          },
          "taxPercentage": {
            "order": 2,
            "title": "Tax percentage",
            "type": "string",
            "placeholder": "0%"
          }
        }
      },
      "location": {
        "order": 2,
        "title": "Buttons location",
        "description": "Where the buttons will appear on the page.",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "buttons": {
        "title": "Items",
        "type": "array",
        "order": 3,
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "order": 1,
              "title": "Button type",
              "type": "string",
              "enum": [
                "buynow",
                "donate",
                "subscribe"
              ],
              "enumNames": {
                "buynow": "Buy Now",
                "donate": "Donate",
                "subscribe": "Subscribe"
              },
              "default": "buynow"
            },
            "name-buynow": {
              "order": 2,
              "title": "Product name",
              "type": "string",
              "placeholder": "Electronics, e-book, clothes, etc.",
              "showIf": {
                "buttons[].type": "buynow"
              }
            },
            "name-donate": {
              "order": 2,
              "title": "Donation name",
              "type": "string",
              "placeholder": "Acme fundraiser, blog donation drive, etc.",
              "showIf": {
                "buttons[].type": "donate"
              }
            },
            "name-subscribe": {
              "order": 2,
              "title": "Subscription name",
              "type": "string",
              "placeholder": "Newsletter, Ice cream club, etc.",
              "showIf": {
                "buttons[].type": "subscribe"
              }
            },
            "description": {
              "order": 3,
              "title": "Description",
              "type": "string",
              "format": "textarea"
            },
            "amount-buynow": {
              "order": 4,
              "title": "Product price",
              "description": "How much the buyer will be charged.",
              "type": "number",
              "placeholder": "0.00",
              "minimum": 0,
              "showIf": {
                "buttons[].type": "buynow"
              }
            },
            "amount-donate": {
              "order": 4,
              "title": "Suggested donation",
              "type": "number",
              "placeholder": "0.00",
              "minimum": 0,
              "showIf": {
                "buttons[].type": "donate"
              }
            },
            "amount-subscribe": {
              "order": 4,
              "title": "Subscription price",
              "description": "How much the buyer will be charged.",
              "type": "number",
              "placeholder": "0.00",
              "minimum": 0,
              "showIf": {
                "buttons[].type": "subscribe"
              }
            },
            "shipping": {
              "order": 5,
              "title": "Shipping cost",
              "description": "How much the buyer will be charged for shipping.",
              "type": "number",
              "placeholder": "0.00",
              "minimum": 0,
              "showIf": {
                "buttons[].type": "buynow"
              }
            },
            "showQuantity": {
              "order": 6,
              "type": "boolean",
              "title": "Show quantity",
              "showIf": {
                "buttons[].type": "buynow"
              }
            },
            "period": {
              "order": 6,
              "title": "Payment period",
              "description": "How often a customer will be billed.",
              "type": "string",
              "showIf": {
                "buttons[].type": "subscribe"
              },
              "enum": [
                "D",
                "W",
                "M",
                "Y"
              ],
              "enumNames": {
                "D": "Daily",
                "W": "Weekly",
                "M": "Monthly",
                "Y": "Yearly"
                },
              "default": "M"
            },

            "recurrence": {
              "order": 7,
              "title": "Subscription duration",
              "type": "object",
              "showIf": {
                "buttons[].type": "subscribe"
              },
              "properties": {
                "type": {
                  "order": 1,
                  "type": "string",
                  "title": "How long should a customer be billed?",
                  "format": "radios",
                  "default": "reoccurring",
                  "enum": [
                    "reoccurring",
                    "custom"
                  ],
                  "enumNames": {
                    "reoccurring": "Reoccurring every period.",
                    "custom": "A custom duration."
                  }
                },

                "customDuration": {
                  "order": 2,
                  "minimum": 1,
                  "title": "Custom Duration",
                  "type": "integer",
                  "placeholder": 1,
                  "default": 2,
                  "showIf": {
                    "buttons[].recurrence.type": "custom"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
