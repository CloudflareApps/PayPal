{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./vendor/button.js"
      }
    ],
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "merchantID": {
        "title": "Merchant ID",
        "description": "Enter your Merchant ID or email associated with Paypal",
        "order": 1,
        "type": "string"
        },
      "buttons": {
        "title": "Paypal Buttons",
        "type": "array",
        "order": 2,
        "items": {
          "type": "object",
          "title": "slide",
          "properties": {
            "location": {
              "order": 1,
              "title": "location",
              "type": "object",
              "format": "element",
              "default": {
                "selector": "body",
                "method": "prepend"
              }
            },
            "type": {
              "order": 2,
              "title": "Type of button",
              "type": "string",
              "enum": [
                "buynow",
                "cart",
                "donate",
                "subscribe"
              ],
              "enumNames": {
                "buynow": "Buy Now",
                "cart": "Add to cart",
                "donate": "Donate",
                "subscribe": "Subscribe"
              },
              "default": "buynow"
            },
            "name": {
              "order": 3,
              "title": "Name of product",
              "type": "string"
            },
            "amount": {
              "order": 4,
              "title": "Price of product",
              "type": "number"
            },
            "howOften": {
              "order": 5,
              "title": "How often in a period should a customer be billed?",
              "type": "integer",
              "showIf": {
                "buttons[].type": "subscribe"
              }
            },
            "timePeriod": {
              "order": 6,
              "title": "How long is the time period?",
              "type": "string",
              "showIf": {
                "buttons[].type": "subscribe"
              },
              "enum": [
                "D",
                "W",
                "M",
                "Y"
              ],
              "enumNames": {
                "D": "Daily",
                "W": "Weekly",
                "M": "Monthly",
                "Y": "Yearly"
                },
              "default": "M"
            },
            "currency": {
              "order": 7,
              "title": "Currency",
              "type": "string"
            },
            "quantity": {
              "order": 8,
              "title": "Quantity",
              "description": "You can set how many of the product a person will purchase by default",
              "type": "integer"
            },
            "tax": {
              "order": 9,
              "title": "Tax",
              "type": "number"
            },
            "shipping": {
              "order": 10,
              "title": "Shipping Price",
              "type": "number"
            },
            "size": {
              "order": 11,
              "Title": "Button size",
              "type": "string",
              "enum": [
                "small",
                "large"
              ],
              "enumNames": {
                "small": "Small",
                "large": "Large"
              },
              "default": "small"
            },
            "style": {
              "order": 12,
              "title": "Style",
              "type": "string",
              "enum": [
                "primary",
                "secondary"
              ],
              "enumNames": {
                "primary": "Primary",
                "secondary": "Secondary"
                },
              "default": "primary"
            }
          }
        }
      }
    }
  }
}
