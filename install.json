{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./vendor/button.js"
      }
    ],
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "merchantID": {
        "title": "Merchant ID",
        "description": "Get your merchant id from paypal",
        "order": 1,
        "type": "string"
        },
      "buttons": {
        "title": "Paypal Buttons",
        "type": "array",
        "order": 2,
        "items": {
          "type": "object",
          "title": "slide",
          "properties": {
            "location": {
              "order": 1,
              "title": "location",
              "type": "object",
              "format": "element",
              "default": {
                "selector": "body",
                "method": "append"
              }
            },
            "type": {
              "order": 2,
              "title": "Type of button",
              "type": "string",
              "enum": [
                "buynow",
                "cart",
                "donate",
                "subscribe"
              ],
              "enumNames": {
                "buynow": "Buy Now",
                "cart": "Add to cart",
                "donate": "Donate",
                "subscribe": "Subscribe"
              },
              "default": "buynow"
            },
            "name": {
              "title": "Name of product",
              "type": "string"
              },
            "amount": {
              "title": "Price of product",
              "type": "integer"
              },
            "howOften": {
              "title": "How often in a period should a customer be billed?",
              "type": "integer",
              "showIf": {
                "buttons[].type": "subscribe"
              }
              },
            "timePeriod": {
              "title": "How long is the time period?",
              "type": "string",
              "showIf": {
                "buttons[].type": "subscribe"
              },
              "enum": [
                "D",
                "W",
                "M",
                "Y"
              ],
              "enumNames": {
                "D": "Daily",
                "W": "Weekly",
                "M": "Monthly",
                "Y": "Yearly"
                },
              "default": "M"
              },
            "currency": {
              "title": "Currency",
              "type": "string"
              },
            "quantity": {},
            "tax": {},
            "shipping": {},
            "size": {},
            "style": {}
          }
        }
      }
    }
  }
}
